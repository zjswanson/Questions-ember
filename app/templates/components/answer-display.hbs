{{#if formOpen}}
<form>
  <div class="form-group">
    <label for="answerTitle">Title</label>
    {{input value=answerTitle}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author}}
  </div>
  <div class="form-group">
    <label for="answerBody">Text</label>
    {{textarea value=answerBody}}
  </div>
  <button {{action "updateAnswer" answer question}} class="btn">Confirm</button>
  <button {{action "hideForm"}} class="btn">Cancel</button>
</form>
{{else}}
  <div class="col-sm-3">
    <div class="answer-display">
      <h4>{{answer.answerTitle}}</h4>
      <h5>By: {{answer.author}}</h5>
      <p>
        {{answer.answerBody}}
      </p>
      <button {{action "showForm"}} class="btn btn-sm">Edit</button>
      <button {{action "deleteAnswer" answer question}} class="btn btn-sm">Delete</button>
    </div>
  </div>
{{/if}}
